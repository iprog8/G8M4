@model ICollection<FirstMvcApp.Models.Supplier>

@{
    ViewBag.Title = "Furnizori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr class="table-bordered table-condensed" style="color:red">
        <td class="table-bordered table-condensed"> Companie</td>
        <td class="table-bordered table-condensed"> Contact</td>
        <td class="table-bordered table-condensed"> Telefon</td>
        <td class="table-bordered table-condensed"> Actiuni</td>

    </tr>
    @foreach (var supplier in Model)
    {
<tr class="table-bordered table-condensed">
    <td class="table-bordered table-condensed"> @supplier.CompanyName</td>
    <td class="table-bordered table-condensed"> @supplier.ContactName</td>
    <td class="table-bordered table-condensed"> @supplier.Phone</td>
    <td class="table-bordered table-condensed">
        @Html.ActionLink("Editare", "Edit", "Supplier", new { id = supplier.Id }, null) |
        @Html.ActionLink("Sterge", "Delete", "Supplier")
    </td>
</tr>
    }
</table>



