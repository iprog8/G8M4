<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My First Mvc App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_Menu")
    
    <div class="container body-content">

        <hr />
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                @{
                    Html.RenderAction("_CursValutar", "Currency");
                    Html.RenderPartial("_dateTimeGeneration");
                }
            </div>
        </div>

        <hr />
        @Html.Partial("_DateTimegeneration")
        <footer>
            <p>&copy; @DateTime.Now.Year - My First Mvc App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
