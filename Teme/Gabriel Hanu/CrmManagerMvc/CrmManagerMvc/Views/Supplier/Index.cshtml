@model CrmManagerMvc.ViewModels.SupplierIndexViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Translations.GetTextFor("Title")</h2>

@Html.Partial("_Pagging", Model.PageInfo)
<table>
    <tr class="table-bordered">
        <td class="table-bordered">@Model.Translations.GetTextFor("Company")</td>
        <td class="table-bordered">@Model.Translations.GetTextFor("Contact")</td>
        <td class="table-bordered">@Model.Translations.GetTextFor("Country")</td>
        <td class="table-bordered">@Model.Translations.GetTextFor("Phone")</td>
    </tr>
    @foreach (var supplier in Model.SupplierList)
    {
        <tr class="table-bordered">
            <td class="table-bordered">@supplier.CompanyName</td>
            <td class="table-bordered">@supplier.ContactName</td>
            <td class="table-bordered">@supplier.Country</td>
            <td class="table-bordered">@supplier.Phone</td>
        </tr>
    }
</table>
@Html.Partial("_Pagging", Model.PageInfo)

@{
    Html.Partial("_DummyPartial");
}

